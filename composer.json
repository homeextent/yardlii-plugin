{
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "phpstan/phpstan-phpunit": "^1.4",
    "phpstan/extension-installer": "^1.3",
    "php-stubs/wordpress-stubs": "^6.8",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpunit/phpunit": "^9.6",
    "yoast/phpunit-polyfills": "^2.0",
    "wp-phpunit/wp-phpunit": "^6.7"
  },
  "autoload": {
    "psr-4": {
      "Yardlii\\Core\\": "includes/"
    }
  },
  "scripts": {
    "stan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon --error-format=github",
    "test:unit": "php -d memory_limit=-1 vendor/bin/phpunit -c phpunit.xml.dist --testsuite unit",
    "stan:baseline": "vendor/bin/phpstan analyse -c phpstan.neon --generate-baseline=phpstan-baseline.neon",
    "test:integration": "php -d memory_limit=-1 vendor/bin/phpunit -c phpunit.integration.xml --testsuite integration"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
