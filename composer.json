{
  "name": "yardlii/yardlii-core-functions",
  "description": "YARDLII Core Functions WordPress plugin",
  "type": "wordpress-plugin",
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "wp-phpunit/wp-phpunit": "^6.6",
    "yoast/phpunit-polyfills": "^3.1",
    "phpstan/phpstan": "^1.11",
    "php-stubs/wordpress-stubs": "^6.8"
  },
  "autoload": {
    "psr-4": {
      "Yardlii\\": "includes/"
    }
  },
  "scripts": {
  "test": "phpunit -c phpunit.xml.dist",
  "stan": "phpstan analyse -c phpstan.neon"
},
  "config": {
    "platform": { "php": "8.0.0" },
    "sort-packages": true
  }
}